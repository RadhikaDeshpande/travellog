<body>
  <div class='blurred-container'>
    <div class="img-src" style="background-image: url('assets/img/cover.jpg')"></div>
      <div class='img-src blur' style="background-image: url('assets/img/cover_blur.jpg')"></div>
      
      <div class="motto">
        <a class="navbar-brand" href="http://localhost:3000/">TravelLog </a>
            <a class="navbar-brand" style='margin-left:5px;'>
          <% if (user_id.length  > 0 && user_name.length > 0) { %><div class="row divtext"> Welcome <%= user_id %>!, <%= user_name %> </div><% } %> 
          <div class="logoutButton">
            <a class="navbar-brand" href="http://localhost:3000/logout">Logout</a>
          </div>
          <div class="logindiv">
            <div class="signupbutton"><a class="btn btn-block btn-lg btn-round" href="http://localhost:3000/addblog">Add a new Blog</a></div>
            <% if (user_id.length  > 0 ) { %>
            <input type="hidden" name="email_id" id="email_id" value="<%= user_id %>">
            <% } %>
            <div class="signupbutton"><button type="submit" id="myblogs" class="btn btn-block btn-lg btn-round">View My Blogs</button></div>
            <div class="signupbutton"><a class="btn btn-block btn-lg btn-round" href="http://localhost:3000/viewblogs">View Others Blogs</a></div>
          </div>
      </div>
  </div> <!-- end blurred container -->
  
</body>



